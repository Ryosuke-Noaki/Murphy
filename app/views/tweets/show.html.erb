<div class="contents">
  <div class="content-post">
    <% if user_signed_in? && current_user.id == @tweet.user_id %>
      <div class="more">
        <ul class="more list">
      </div>
    <% end %>
    <%= simple_format(@tweet.text) %>
    <span class="name">
      <a href="/users/<%= @tweet.user.id %>">
        <span>投稿者</span><%= @tweet.user.nickname %>
      </a>
    </span>
  </div>
  <div class="container">
    <% if current_user %>
      <%= form_for [@tweet, @comment] do |f| %>
        <div class="row">
          <div class="col10 push1">
          <%= f.text_area :text, placeholder: 'テキスト', style: 'width: 90%;height: 100px;' %>
          <%= button_tag type: "submit", class: "btn btn--block" do %>送信<i class="icon-arrow-right"></i>
          <% end %>
      <% end %>
    <% end %>
    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
            <%= comment.text %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


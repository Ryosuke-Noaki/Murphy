
<div class="contents" >
  <% @tweets.each do |tweet| %>
    <div class="balloon1-right col-sm-6 col-sm-offset-3">
          <p><%= simple_format(tweet.text) %></p>
          <span class="name">
              <%= tweet.user.nickname %>さん
          </span>
      <div class="btn-group">
        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          action
          <span class="caret"></span>
        </button>
          <ul class="dropdown-menu" role="menu">
              <li role="presentation"><%= link_to 'コメント', tweet_path(tweet) , method: :get %></li>
            <% if user_signed_in? && current_user.id == tweet.user_id %>
              <li role="presentation"><%= link_to '編集', edit_tweet_path(tweet) , method: :get %></a></li>
              <li role="presentation"><%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %></a></li>
          </ul>
            <% end %>
      </div>
    </div>
  <% end %>
</div>

